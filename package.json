{
  "name": "rosella-cli",
  "version": "1.0.0",
  "description": "An interactive git branch management CLI tool",
  "main": "dist/index.js",
  "bin": {
    "rosella": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "yarn node dist/index.js",
    "rosella": "yarn node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "yarn lint && yarn test && yarn build"
  },
  "keywords": [
    "git",
    "cli",
    "branch",
    "interactive"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/quangdatv/rosella-cli.git"
  },
  "bugs": {
    "url": "https://github.com/quangdatv/rosella-cli/issues"
  },
  "homepage": "https://github.com/quangdatv/rosella-cli#readme",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "chalk": "^5.6.2",
    "ink": "^6.3.1",
    "react": "^19.2.0",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/ink-testing-library": "^1.0.4",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "happy-dom": "^20.0.5",
    "ink-testing-library": "^4.0.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
