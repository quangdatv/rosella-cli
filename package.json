{
  "name": "rosella-cli",
  "version": "1.0.0",
  "description": "An interactive git branch management CLI tool",
  "main": "dist/index.js",
  "bin": {
    "rosella": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "yarn node dist/index.js",
    "rosella": "yarn node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "git",
    "cli",
    "branch",
    "interactive"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "chalk": "^5.6.2",
    "ink": "^6.3.1",
    "react": "^19.2.0",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/ink-testing-library": "^1.0.4",
    "@types/jsdom": "^27",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/ui": "^3.2.4",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^27.0.1",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
